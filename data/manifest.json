{
  "manifest_version": 2,
  "name": "Tracker",
  "version": "2.0",
  "description": "Save page data to Tracker.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "<all_urls>",
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "applications": {
    "gecko": {
      "id": "tracker@paysonwallach.com"
    }
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "options_ui": {
    "page": "options.html"
  }
}
